<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
    <class name="XMLBasedConfiguration.Company" table="company">
        <id name="CompanyId" column="Company_Id">
            <generator class="increment"></generator>
        </id>
        <property name="CompanyName" column="Company_Name" type="string"/>
        <property name="Address" column="Company_Address" type="string"/>
        <property name="NoEmployee" column="No_Employee" type="integer"/>


    </class>

</hibernate-mapping>